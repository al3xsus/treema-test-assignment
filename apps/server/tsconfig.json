{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* --- ADD THESE THREE LINES --- */
    "baseUrl": ".",
    "paths": { "*": ["../../node_modules/*"] },
    "typeRoots": ["../../node_modules/@types", "node_modules/@types"]
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../../packages/shared" }
  ]
}