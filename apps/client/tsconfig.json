{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "noEmit": true,
      "incremental": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "plugins": [{ "name": "next" }],
      "baseUrl": ".",
      "paths": {
        "@treema-todo-assignment/shared": ["../../packages/shared/src/index.ts"]
      }
    },
    "include": ["src/**/*", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
  }